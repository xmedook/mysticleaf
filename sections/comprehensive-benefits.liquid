{% comment %}
  Comprehensive Benefits Section
{% endcomment %}

<div class="comprehensive-benefits-section">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <h2 class="section-title">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="benefits-grid">
      {% for block in section.blocks %}
        <div class="benefit-item">
          <div class="benefit-item-front">
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | image_url: width: 400 }}"
                alt="{{ block.settings.image.alt | escape }}"
                loading="lazy"
                width="{{ block.settings.image.width }}"
                height="{{ block.settings.image.height }}"
              >
            {% endif %}
            {% if block.settings.front_title != blank %}
              <h3>{{ block.settings.front_title }}</h3>
            {% endif %}
            {% if block.settings.front_subtitle != blank %}
              <p>{{ block.settings.front_subtitle }}</p>
            {% endif %}
            <button class="flip-button">+</button>
          </div>
          <div class="benefit-item-back">
            {% if block.settings.back_title != blank %}
              <h3>{{ block.settings.back_title }}</h3>
            {% endif %}
            {% if block.settings.back_description != blank %}
              <div>{{ block.settings.back_description }}</div>
            {% endif %}
            {% if block.settings.cta_text != blank and block.settings.cta_link != blank %}
              <a href="{{ block.settings.cta_link }}" class="button">{{ block.settings.cta_text }}</a>
            {% endif %}
            <button class="close-button">X</button>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Comprehensive Benefits",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Comprehensive Benefits"
    }
  ],
  "blocks": [
    {
      "type": "benefit_item",
      "name": "Benefit Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "front_title",
          "label": "Front Title"
        },
        {
          "type": "text",
          "id": "front_subtitle",
          "label": "Front Subtitle"
        },
        {
          "type": "text",
          "id": "back_title",
          "label": "Back Title"
        },
        {
          "type": "richtext",
          "id": "back_description",
          "label": "Back Description"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "CTA Button Text"
        },
        {
          "type": "url",
          "id": "cta_link",
          "label": "CTA Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Comprehensive Benefits",
      "blocks": [
        {
          "type": "benefit_item"
        },
        {
          "type": "benefit_item"
        },
        {
          "type": "benefit_item"
        },
        {
          "type": "benefit_item"
        }
      ]
    }
  ]
}
{% endschema %}
