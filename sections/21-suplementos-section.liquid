{%- style -%}
  @import url('https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=Gentium+Book+Plus:ital,wght@0,400;0,700;1,400;1,700&display=swap');

  .ph-section-container {
    font-family: 'DM Sans', sans-serif;
    line-height: 1.5;
    background-color: #fff;
    background-image: url({{ section.settings.background_image | img_url: 'master' }});
    background-size: cover;
    background-position: center;
    padding: 123px;
  }

  .ph-main-banner-wrapper {
    padding: 20px 0;
  }

  .ph-main-banner {
    background-color: #1E4A8B;
    color: white !important;
    padding: 35px 40px;
    border-radius: 150px 0px 150px 0px;
    width: 95%;
    max-width: 1100px;
    margin: 0 auto;
    position: relative;
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
  }

  .ph-title-section {
    text-align: center;
    margin-bottom: 35px;
  }
  .ph-title-section h1 {
    font-size: clamp(2.8em, 5vw, 4em);
    font-weight: 900;
    margin: 0;
    line-height: 1;
    text-transform: uppercase;
    color: white !important;
  }
  .ph-title-section h2 {
    font-size: clamp(1.8em, 3.5vw, 2.5em);
    font-family: "Gentium Book Plus";
    font-weight: 500;
    margin: 8px 0 0 0;
    color: #BDD4F1 !important;
    text-transform: uppercase;
  }

  .ph-product-details-flex {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 30px;
    margin-bottom: 40px;
  }

  .ph-claims-column {
    flex: 1 1 220px;
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .ph-claim h3 {
    font-size: clamp(1.2em, 2.5vw, 1.6em);
    font-weight: 700;
    margin: 0 0 8px 0;
    color: white !important;
  }
  .ph-claim p {
    color: #E0EFFF;
    font-size: clamp(0.9em, 2vw, 1.05em);
    margin: 0;
    line-height: 1.45;
  }

  .ph-product-image-container {
    flex: 1 1 300px;
    text-align: center;
    align-self: center;
    padding: 0 15px;
  }
  .ph-product-image-container img {
    max-width: 100%;
    width: 320px;
    height: auto;
    filter: drop-shadow(8px 8px 15px rgba(0,0,0,0.25));
  }

  .ph-footer-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 30px;
    gap: 20px;
    flex-wrap: wrap;
  }

  .ph-logos {
    display: flex;
    gap: 20px;
    align-items: center;
    flex-wrap: wrap;
  }
  .ph-logos img {
    height: 85px;
    width: auto;
    padding: 3px;
    border-radius: 5px;
  }

  .ph-content-info {
    background-color: white;
    color: #1E4A8B;
    padding: 12px 25px;
    border-radius: 25px;
    font-weight: bold;
    font-size: clamp(1em, 2.2vw, 1.25em);
    white-space: nowrap;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  }

  /* Responsive: tablet y móvil */
  @media (max-width: 768px) {
    .ph-section-container {
      padding: 60px 20px;
    }
    .ph-main-banner {
      width: 100%;
      margin: 0;
      padding: 25px 20px;
      border-radius: 30px;
    }

    .ph-title-section h1 {
      font-size: 2em;
    }
    .ph-title-section h2 {
      font-size: 1.4em;
    }

    .ph-product-details-flex {
      flex-direction: column;
      align-items: center;
      gap: 25px;
    }

    .ph-claims-column {
      width: 100%;
      max-width: 400px;
      order: 1;
      text-align: center;
    }

    .ph-product-image-container {
      width: 75%;
      max-width: 280px;
      order: 0;
      margin-bottom: 15px;
    }
    .ph-product-image-container img {
      transform: rotate(0deg);
      width: 100%;
    }

    .ph-footer-section {
      flex-direction: column;
      align-items: center;
      gap: 20px;
    }

    .ph-logos {
      order: 1;
      justify-content: center;
    }

    .ph-content-info {
      order: 0;
      text-align: center;
    }
  }
{%- endstyle -%}
