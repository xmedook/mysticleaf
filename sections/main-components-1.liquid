    },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "<p>Discover the main components our products offer for your wellbeing.</p>"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f9f9f9"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Heading Color",
      "default": "#722F37"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 20,
      "max": 50,
      "step": 1,
      "label": "Heading Size",
      "default": 36
    }
  ],
  "blocks": [
    {
      "name": "Component Card",
      "type": "benefit_card",
      "limit": 9,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Component"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Component Description"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>This component provides essential functionality for your application. The unique features support your needs and help achieve desired outcomes.</p><p>Regular use can lead to improved results and enhanced performance.</p>"
        },
        {
          "type": "color",
          "id": "title_color",
          "label": "Title Color",
          "default": "#722F37"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Main Components",
      "blocks": [
        {
          "type": "benefit_card"
        },
        {
          "type": "benefit_card"
        },
        {
          "type": "benefit_card"
        }
      ]
    }
  ]
}
{% endschema %}